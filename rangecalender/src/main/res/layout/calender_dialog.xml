<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/topbar"
        layout="@layout/toplayout"></include>

    <android.support.v7.widget.CardView
        android:id="@+id/yearPickerLayout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_below="@+id/topbar"
         android:elevation="10dp"
        android:layout_above="@+id/btnLayout"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/yearPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </android.support.v7.widget.CardView>




    <RelativeLayout
        android:id="@+id/dateChangeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/topbar"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
          >

        <TextView
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:drawableLeft="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
               />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="July"
            android:textColor="@android:color/black"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="7dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            ></TextView>

        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
             android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="onClick"

            />


    </RelativeLayout>



     <include
         android:id="@+id/daysLayout"
         layout="@layout/days_layout"
         android:layout_below="@+id/dateChangeLayout"
         android:layout_height="wrap_content"
         android:layout_width="match_parent"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/calenderDates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/daysLayout"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

    </android.support.v7.widget.RecyclerView>




    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calenderDates"
        android:weightSum="2"
        >
    <TextView
        android:id="@+id/OkBtn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Ok"
         android:textColor="@android:color/holo_blue_dark"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        ></TextView>

    <TextView
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@android:color/holo_blue_dark"
         android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_toLeftOf="@+id/OkBtn"
android:layout_weight="1"
        android:gravity="center"
        ></TextView>

    </LinearLayout>

</RelativeLayout>